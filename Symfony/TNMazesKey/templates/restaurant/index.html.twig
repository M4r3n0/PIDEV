					<div class="section-header">
						<h2>Nos Restaurants</h2>

					</div>

					<div class="row">


						<div class="col-md-6">


							{% block body %}


								<table class="table">
									<thead>
										<tr>
											<th>Id</th>
											<th>Nom</th>
											<th>Adresse</th>
											<th>Menu</th>
											<th>Programme</th>
											<th>Telephone</th>
											<th>Nombre de places
											</th>
											<th>Note</th>
											<th>actions</th>
										</tr>
									</thead>
									<tbody>
										{% for restaurant in restaurants %}
											<tr>
												<td>{{ restaurant.id }}</td>
												<td>{{ restaurant.nom }}</td>
												<td>{{ restaurant.adresse }}</td>
												<td>{{ restaurant.menu }}</td>
												<td>{{ restaurant.prog }}</td>
												<td>{{ restaurant.telephone }}</td>
												<td>{{ restaurant.nbrep }}</td>
												<td>{{ restaurant.note }}</td>
												<td>
													<a href="{{ path('app_restaurant_show', {'id': restaurant.id}) }}">Afficher</a>
													<a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}">Modifier</a>
													<a href="{{ path('app_avis_new', {'id': restaurant.id}) }}">Noter</a>

												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="9">no records found</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
								<center>
									<button>
										<a href="{{ path('app_restaurant_new') }}">Nouveau Restaurant</a>
									</button>
								</center>
							{% endblock %}


						</div>

					</div>
				</div>

			</section>
